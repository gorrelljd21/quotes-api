type Quote {
    # "the quote needs an id as a string (UUID format)"
    id: String!
    # "each quote will be a string"
    quote: String!
    # "each quote will have an author"
    author: String!
}

type Query {
    quote: Quote
    quoteId(id: String!): Quote 
}

input newQuote {
    quote: String!
    author: String!
}

type Mutation {
    insertQuote(input: newQuote!): Quote
    deleteQuote(id: String!): Quote
}